<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".AppConfigAreasFragment">

        <TextView
                android:text="Body Areas:"
                android:layout_marginTop="@dimen/dp8"
                android:layout_height="wrap_content" android:layout_width="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView4"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:paddingStart="@dimen/dp16"
                android:clipToPadding="false"
                android:layout_height="0dp" android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/saveButton"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4"/>

        <Button
                android:id="@+id/saveButton"
                android:text="save"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>